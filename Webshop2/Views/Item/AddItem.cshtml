@model ItemModel
@{
    ViewData["Title"] = "AddItem";
}
@Html.ValidationSummary()
<h2>Add new Item</h2>
<form class="form-horizontal" asp-controller="Item" asp-action="AddItem" method="post">
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Description" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="CategoryId" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Image" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Image" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Price" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </div>
</form>

